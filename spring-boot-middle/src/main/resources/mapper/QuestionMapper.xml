<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//myhabits.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wuhao.springboot.middle.mapper.QuestionMapper">
    <insert id="insertQuestion" parameterType="wuhao.springboot.middle.entity.Question">
        INSERT INTO questions (question_content, user_id, question_created)
        VALUES (#{questionContent}, #{user.userId}, #{createTime});
    </insert>

    <select id="findAllQuestions" resultType="wuhao.springboot.middle.entity.Question">
        SELECT * FROM questions;
    </select>
    <select id="findById" parameterType="Integer" resultType="wuhao.springboot.middle.entity.Question">
        SELECT * FROM questions WHERE question_id = #{value};
    </select>
</mapper>